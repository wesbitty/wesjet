{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "yarn build",
            "options": { "cwd": "${workspaceFolder}" },
            "presentation": {
              "focus": true,
              "panel": "dedicated",
              "group": "build",
              "reveal": "silent",
              "showReuseMessage": true,
              "clear": true
            }
          },
          {
            "label": "build:wesjet",
            "type": "shell",
            "command": "yarn build",
            "options": { "cwd": "${workspaceFolder}/cli/wesjet" },
            "presentation": {
              "focus": false,
              "panel": "dedicated",
              "group": "build",
              "reveal": "silent",
              "showReuseMessage": true,
              "clear": true
            }
          },
      {
        "label": "build:clean",
        "type": "shell",
        "command": "yarn build:clean",
        "presentation": {
          "focus": true,
          "panel": "shared",
          "group": "dev",
          "showReuseMessage": true,
          "clear": false,
          "close": true,
        }
      },
      {
        "label": "test",
        "type": "shell",
        "command": "yarn test",
        "presentation": {
          "focus": true,
          "panel": "shared",
          "group": "test",
          "showReuseMessage": true,
          "clear": true
        }
      },
      {
        "label": "lint",
        "type": "shell",
        "command": "yarn lint",
        "problemMatcher": ["$eslint-stylish"],
        "presentation": {
          "focus": true,
          "panel": "shared",
          "group": "test",
          "showReuseMessage": true,
          "clear": true
        }
      }
    ]
}
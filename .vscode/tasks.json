{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "npm run build",
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": {
        "focus": true,
        "panel": "dedicated",
        "group": "build",
        "reveal": "silent",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build:cli",
      "type": "shell",
      "command": "npm run build",
      "options": { "cwd": "${workspaceFolder}/cli/*" },
      "presentation": {
        "focus": false,
        "panel": "dedicated",
        "group": "build",
        "reveal": "silent",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "rm",
      "type": "shell",
      "command": "npm run rm",
      "presentation": {
        "focus": true,
        "panel": "shared",
        "group": "dev",
        "showReuseMessage": true,
        "clear": false,
        "close": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "npm run test",
      "presentation": {
        "focus": true,
        "panel": "shared",
        "group": "test",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "npm run lint",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "focus": true,
        "panel": "shared",
        "group": "test",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "all",
      "type": "shell",
      "command": "npm run all",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "focus": true,
        "panel": "shared",
        "group": "test",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}

{
  "name": "wesjetpkg",
  "description": "Incremental Bundler, Transform & Validate content and build system optimized for JavaScript and TypeScript",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "scripts": {
    "postinstall": "ts-patch install && ts-patch --persist",
    "lint": "npm run format:prettier && npm run format:eslint",
    "check:prettier": "prettier -c .",
    "check:eslint": "eslint cli --ext .ts --max-warnings=0",
    "postinstall:wesjet": "npm --workspaces --verbose --include \"examples-*\" exec npm -w wesjet run postinstall",
    "build": "tsc -b tsconfig.build.json",
    "format:prettier": "prettier -w .",
    "format:eslint": "eslint . --ext js,jsx,ts,tsx -c ./.eslintrc.json",
    "build:clean": "bash -c 'rm -rf cli/*/dist cli/@wesjet/*/dist'",
    "all": "npm run build:clean && npm run build && npm -w wesjet-nextjs-plugin run prepack"
  },
  "lint-staged": {
    "*.@(js|ts)": [
      "eslint --quiet --fix"
    ],
    "*.{ts,tsx,md,mdx,js,jsx,mjs,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "author": "Wesbitty, Inc",
  "keywords": [
    "Wesjet",
    "Bundler",
    "Typescript",
    "Maker"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesbitty/wesjetpkg"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@effect-ts/tracing-plugin": "^0.20.0",
    "@types/prettier": "^2.7.1",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.7",
    "ts-patch": "^2.0.2",
    "typescript": "^4.8.4"
  },
  "workspaces": [
    "examples/*",
    "apps/www",
    "cli/*",
    "cli/@wesjet/*",
    "tests"
  ],
  "resolutions": {
    "esbuild": "0.14.38",
    "wesjet": "*",
    "@wesjet/*": "*",
    "wesjet-simple-import-hooks": "*",
    "wesjet-nextjs-plugin": "*",
    "rxjs": "^7.1.0"
  }
}
